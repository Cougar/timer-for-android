<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical"
  android:background="@drawable/bg"
  android:paddingTop="@dimen/layout_padding_top"
  android:paddingRight="@dimen/layout_padding_right"
  android:paddingBottom="@dimen/layout_padding_bottom"
  android:paddingLeft="@dimen/layout_padding_left" >
  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal">
    <TextView
      android:layout_height="fill_parent"
      android:layout_width="wrap_content"
      android:textColor="@color/red"
      android:textStyle="bold"        
      android:text="@string/task"/>
  </LinearLayout>   
  <LinearLayout
    android:background="@drawable/divider"
    android:layout_marginTop="5dp"
    android:layout_width="fill_parent"
    android:layout_height="1dp"/>
  <LinearLayout
    android:id="@+id/task_timer_area"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="20dp">
    <TextView
      android:id="@+id/task_timer_duration"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/black"
      android:textStyle="bold"
      android:textSize="@dimen/task_timer_text_size"
      android:text="00:30:54"/>  
  </LinearLayout>     
  <TextView
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_weight="1"
      android:padding="10dp"
      android:layout_marginBottom="5dp"
      android:background="@drawable/textfield"
      android:textSize="@dimen/label_text_size"           
      android:textColor="@color/black"
      android:text="Project description"/>    
  <LinearLayout
    android:background="@drawable/txt_top"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="40dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:textStyle="bold"            
        android:gravity="center_vertical"
        android:padding="@dimen/label_padding"
        android:textSize="@dimen/label_text_size"           
        android:textColor="@color/black"
        android:text="@string/project"/>
    <TextView
        android:layout_width="30dp"
        android:layout_height="fill_parent"
        android:layout_weight="4"
        android:paddingTop="@dimen/label_padding"
        android:gravity="right"
        android:textSize="@dimen/label_text_size"           
        android:textColor="@color/black"
        android:text="Big Client - Website"/>      
    <ImageView
      android:src="@drawable/arrow"
      android:layout_width="10dp"
      android:layout_height="wrap_content"
      android:paddingLeft="20dp"
      android:layout_gravity="center"
      android:layout_weight="1"/>        
  </LinearLayout>
  <LinearLayout
    android:background="@drawable/txt_middle"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="30dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textSize="@dimen/label_text_size"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/label_padding_left"           
        android:textColor="@color/black"          
        android:text="@string/date"/>
    <TextView
        android:layout_width="30dp"
        android:layout_height="fill_parent"
        android:layout_weight="4"
        android:gravity="right"
        android:padding="@dimen/label_padding_left"
        android:textSize="@dimen/label_text_size"           
        android:textColor="@color/black"
        android:text="12. mai, K"/>   
    <ImageView
      android:src="@drawable/arrow"
      android:layout_width="10dp"
      android:layout_height="wrap_content"
      android:paddingLeft="20dp"
      android:layout_gravity="center"
      android:layout_weight="1"/>           
  </LinearLayout>    
  <LinearLayout
    android:background="@drawable/txt_middle"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="50dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textSize="@dimen/label_text_size"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/label_padding_left"           
        android:textColor="@color/black"          
        android:text="@string/billable"/>
     
  </LinearLayout>    
  <LinearLayout
    android:background="@drawable/txt_middle"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="40dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textSize="@dimen/label_text_size"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/label_padding_left"           
        android:textColor="@color/black"          
        android:text="@string/planned"/>
    <TextView
        android:layout_width="30dp"
        android:layout_height="fill_parent"
        android:layout_weight="4"
        android:gravity="right"
        android:padding="@dimen/label_padding_left"
        android:textSize="@dimen/label_text_size"           
        android:textColor="@color/light_gray"
        android:text="(optional)"/>     
    <ImageView
      android:src="@drawable/arrow"
      android:layout_width="10dp"
      android:layout_height="wrap_content"
      android:paddingLeft="20dp"
      android:layout_gravity="center"
      android:layout_weight="1"/>         
  </LinearLayout>    
  <LinearLayout
    android:background="@drawable/txt_bottom"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="50dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textSize="@dimen/label_text_size"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/label_padding_left"           
        android:textColor="@color/black"          
        android:text="@string/tags"/>
    <TextView
        android:layout_width="30dp"
        android:layout_height="fill_parent"
        android:layout_weight="4"
        android:gravity="right"
        android:padding="@dimen/label_padding_left"
        android:textSize="@dimen/label_text_size"           
        android:textColor="@color/light_gray"/>          
    <ImageView
      android:src="@drawable/arrow"
      android:layout_width="10dp"
      android:layout_height="wrap_content"
      android:paddingLeft="20dp"
      android:layout_gravity="center"
      android:layout_weight="1"/>      
  </LinearLayout>    
</LinearLayout>
